<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="200dp"
    android:padding="20dp"
    >

    <View
        android:id="@+id/v_focus_indicator"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/red_apple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_progress_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ImageView
        android:id="@+id/iv_progress_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Progress of Task"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:src="@drawable/ic_task_done"
        app:layout_constraintStart_toEndOf="@id/v_focus_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="Clean Project 1"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_progress_icon"
        app:layout_constraintStart_toEndOf="@id/iv_progress_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Finish all the coding. Start deploying
        asdjkflasjdklfjksljdflkjklj klj jklasjdflk jlaksdjreal app to play asdjfkljsdlkfj jklasdjfjkdl j kasldfjaklsdjf klstore"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_focus_indicator"
        app:layout_constraintTop_toBottomOf="@id/tv_task_title" />

    <TextView
        android:id="@+id/tv_task_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="4/5"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_task_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_task_edit"
        style="@style/Widget.Material3.Button.IconButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/hihi_24"
        app:layout_constraintBottom_toTopOf="@+id/tv_task_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toEndOf="@+id/tv_task_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>